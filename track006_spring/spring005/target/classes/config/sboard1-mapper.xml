<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thejoa703.dao.SboardDao">

	<!-- 명시적 매핑 -->
	<resultMap type="SboardDto" id="sboardMap">
		<result property="id" column="ID"/>
		<result property="appUserId" column="APP_USER_ID"/>
		<result property="btitle" column="BTITLE"/>
		<result property="bcontent" column="BCONTENT"/>
		<result property="bpass" column="BPASS"/>
		<result property="bfile" column="BFILE"/>
		<result property="bhit" column="BHIT"/>
		<result property="bip" column="BIP"/>
		<result property="createdAt" column="CREATE_AT"/>
	
	</resultMap>

						<!-- mybatis-config에서 설정 -->
	<insert id="insert" parameterType="SboardDto">
	insert into sboard1(id, app_user_id, btitle, bcontent, bpass,  bip, create_at) values(sboard1_seq.nextval, #{appUserId}, #{btitle}, #{bcontent}, #{bpass}, #{bip},  sysdate)
	</insert>
			<!-- 명시적 매핑 이후 resultType="SboardDto"에서 교체 -->
	<select resultMap="sboardMap"	id="selectAll">
	select * from sboard1
	</select>
	
	<select	resultMap="sboardMap"	 id="select" parameterType="int">
	select * from sboard1 where id=#{id}
	</select>
	
	<update id="update" parameterType="SboardDto">
	update sboard1 set btitle= #{btitle}, bcontent= #{bcontent}, bpass= #{bpass} where id=#{id}
	</update>
	
	<update	id="updateBhit" parameterType="int">
	update sboard1 set bhit=bhit+1 where id=#{id}
	</update>
	
	<delete id="delete" parameterType="SboardDto">
	delete from sboard1 where id=#{id} and bpass= #{bpass} 
	</delete>
	

</mapper>